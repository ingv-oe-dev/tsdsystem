{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Station config",
    "description": "Edit a station configuration",
    "type": "object",
    "required": ["station_id", "start_datetime"],
    "additionalProperties": false,
    "format": "categories",
    "basicCategoryTitle": "Main",
    "properties": {
        "id": {
            "title": "ID",
            "description": "Identificator",
            "type": "integer",
            "readOnly": true
        },
        "station_id": {
            "title": "Station",
            "description": "Station to which the channel belongs",
            "type": "integer",
            "enum": [],
            "options": {
                "enum_titles": []
            },
            "minimum": 1
        },
        "sensor_id": {
            "title": "Sensor",
            "description": "Sensor to which the channel is related",
            "type": "integer",
            "enum": [],
            "options": {
                "enum_titles": []
            },
            "minimum": 1
        },
        "digitizer_id": {
            "title": "Digitizer",
            "description": "Digitizer to which the channel is related",
            "type": ["integer", "null"],
            "enum": [],
            "options": {
                "enum_titles": []
            },
            "minimum": 1
        },
        "additional_info": {
            "title": "Additional info",
            "type": "object",
            "additionalProperties": true
        },
        "start_datetime": {
            "type": ["string"],
            "format": "date-time",
            "title": "Start Datetime",
            "description": "Standard ISO8601 datetime UTC",
            "options": {
                "grid_columns": 4,
                "inputAttributes": {
                    "placeholder": "YYYY-MM-DD HH:MM:SS"
                }
            },
            "minLength": 1
        },
        "end_datetime": {
            "type": ["string", "null"],
            "format": "date-time",
            "title": "End Datetime",
            "description": "Standard ISO8601 datetime UTC",
            "options": {
                "grid_columns": 4,
                "inputAttributes": {
                    "placeholder": "YYYY-MM-DD HH:MM:SS"
                }
            }
        }
    }
}
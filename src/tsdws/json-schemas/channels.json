{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Channel",
    "description": "Set the properties of the channel",
    "type": "object",
    "required": ["name", "sensor_id"],
    "additionalProperties": false,
    "format": "categories",
    "basicCategoryTitle": "Main",
    "properties": {
        "id": {
            "title": "ID",
            "description": "Identificator",
            "type": "integer",
            "readOnly": true
        },
        "name": {
            "title": "Name",
            "description": "Name",
            "type": "string",
            "minLength": 1
        },
        "sensor_id": {
            "title": "Sensor",
            "description": "Sensor to which the channel belongs",
            "type": "integer",
            "enum": [],
            "options": {
                "enum_titles": []
            }
        },
        "sensortype_id": {
            "title": "Sensortype",
            "description": "The sensor type",
            "type": ["integer", "null"],
            "enum": [],
            "options": {
                "enum_titles": []
            }
        },
        "metadata": {
            "title": "Metadata",
            "description": "Sensortype properties (metadata)",
            "type": "object",
            "options": {
                "hidden": true
            }
        },
        "start_datetime": {
            "type": ["string", "null"],
            "format": "date-time",
            "title": "Start Datetime",
            "description": "Standard ISO8601 datetime UTC",
            "options": {
                "grid_columns": 4,
                "inputAttributes": {
                    "placeholder": "YYYY-MM-DD HH:MM:SS"
                }
            }
        },
        "end_datetime": {
            "type": ["string", "null"],
            "format": "date-time",
            "title": "End Datetime",
            "description": "Standard ISO8601 datetime UTC",
            "options": {
                "grid_columns": 4,
                "inputAttributes": {
                    "placeholder": "YYYY-MM-DD HH:MM:SS"
                }
            }
        },
        "info": {
            "title": "Info",
            "description": "Additional info of the channel (e.g.: digitizer)",
            "type": "object",
            "properties": {
                "digitizer": {
                    "$ref": "#/$defs/digitizer"
                },
                "other": {
                    "title": "Other properties",
                    "description": "Other properties",
                    "type": "object"
                }
            },
            "additionalProperties": true
        }
    },
    "$defs": {
        "digitizer": {
            "title": "Digitizer",
            "description": "Digitizer properties",
            "type": "object"
        }
    }
}
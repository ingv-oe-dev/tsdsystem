{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Site",
    "description": "Set the properties of the site",
    "type": "object",
    "required": ["name", "lat", "lon"],
    "additionalProperties": false,
    "format": "categories",
    "basicCategoryTitle": "Main",
    "properties": {
        "id": {
            "title": "ID",
            "description": "Identificator",
            "type": "integer",
            "readOnly": true
        },
        "name": {
            "title": "Name",
            "description": "Name",
            "type": "string",
            "minLength": 1
        },
        "lat": {
            "type": "number",
            "title": "Latitude",
            "minimum": -90,
            "maximum": 90
        },
        "lon": {
            "type": "number",
            "title": "Longitude",
            "minimum": -180,
            "maximum": 180
        },
        "quote": {
            "type": ["null", "number"],
            "title": "Quote"
        },
        "info": {
            "title": "Info",
            "description": "Additional info of the site",
            "type": "object",
            "additionalProperties": true
        }
    }
}
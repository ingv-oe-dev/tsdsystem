{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Sensor",
    "description": "Set the properties of the sensor",
    "type": "object",
    "required": ["name", "lat", "lon"],
    "additionalProperties": false,
    "format": "categories",
    "basicCategoryTitle": "Main",
    "properties": {
        "id": {
            "title": "ID",
            "description": "Identificator",
            "type": "integer",
            "readOnly": true,
            "propertyOrder": 1
        },
        "name": {
            "title": "Name",
            "description": "Name",
            "type": "string",
            "minLength": 1,
            "propertyOrder": 2
        },
        "lat": {
            "type": "number",
            "title": "Latitude",
            "minimum": -90,
            "maximum": 90,
            "propertyOrder": 3
        },
        "lon": {
            "type": "number",
            "title": "Longitude",
            "minimum": -180,
            "maximum": 180,
            "propertyOrder": 4
        },
        "quote": {
            "type": ["null", "number"],
            "title": "Quote",
            "propertyOrder": 5
        },
        "net_id": {
            "title": "Net",
            "description": "Network to which the sensor belongs",
            "type": "integer",
            "enum": [],
            "options": {
                "enum_titles": []
            },
            "propertyOrder": 6
        },
        "site_id": {
            "title": "Site",
            "description": "Site in which the sensor is located",
            "type": "integer",
            "enum": [],
            "options": {
                "enum_titles": []
            },
            "propertyOrder": 7
        },
        "sensortype_id": {
            "title": "Sensortype",
            "description": "The sensor type",
            "type": "integer",
            "enum": [],
            "options": {
                "enum_titles": []
            },
            "propertyOrder": 8
        },
        "metadata": {
            "title": "Sensortype properties",
            "description": "Sensortype properties",
            "type": "object",
            "propertyOrder": 10,
            "options": {
                "hidden": true
            }
        },
        "custom_props": {
            "title": "Custom Info",
            "description": "Sensor's specific properties (e.g.: digitizer, history)",
            "type": "object",
            "additionalProperties": true,
            "propertyOrder": 9
        }
    }
}